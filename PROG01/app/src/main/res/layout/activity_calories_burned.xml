<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neilshankar.prog01.CaloriesBurned"
    android:background="#ff4062">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:id="@+id/numCalories"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60pt"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories burned"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="9pt"
        android:layout_below="@+id/numCalories"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fun fact!"
        android:id="@+id/textView4"
        android:textColor="#facdab"
        android:textAlignment="center"
        android:textSize="7pt"
        android:layout_above="@+id/funfact"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can burn 140 calories by doing 50 sit-ups or 230 jumping jacks, or by jogging for 20 minutes."
        android:id="@+id/funfact"
        android:textColor="#facdab"
        android:textAlignment="center"
        android:textSize="7pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
