<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neilshankar.prog01.ChooseFeature"
    android:background="#f2f2f2">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter a Goal"
        android:id="@+id/option1"
        android:background="#ff4062"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/option2"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before your workout"
        android:id="@+id/textView5"
        android:textColor="#ff4062"
        android:textAlignment="center"
        android:textSize="9pt"
        android:textStyle="bold"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After your workout"
        android:id="@+id/textView6"
        android:textColor="#ff4062"
        android:textAlignment="center"
        android:textSize="9pt"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the number of calories you want to burn, and crunchtime will tell you how to hit your goal."
        android:id="@+id/textView7"
        android:textColor="#8682ad"
        android:textAlignment="center"
        android:textSize="9pt"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the exercise you finished, and crunchtime will tell you how many calories you burned."
        android:id="@+id/textView8"
        android:textColor="#8682ad"
        android:textAlignment="center"
        android:textSize="9pt"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to crunchtime!"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:background="#ff4062"
        android:paddingLeft="2dp"
        android:paddingTop="10dp"
        android:paddingRight="2dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="9pt"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter an exercise"
        android:id="@+id/option2"
        android:background="#ff4062"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/option1"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
